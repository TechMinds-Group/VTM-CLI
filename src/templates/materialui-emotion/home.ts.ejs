import { Button, Grid, IconButton, Typography } from '@mui/material'
import { grey } from '@mui/material/colors'
import { useState } from 'react'
import { logos } from '../../constants/logos'
import AppStyles from '../../styles/app.styled'

export default function Home() {
  const [count, setCount] = useState<number>(0)

  return (
    <Grid
      container
      flexDirection={'column'}
      alignItems={'center'}
      justifyContent={'center'}
      minHeight={'100vh'}
      p={2}
    >
      <Grid
        container
        maxWidth={'700px'}
        alignItems={'center'}
        justifyContent={'center'}
      >
        {logos.map((logo) => (
          <Grid item textAlign={'center'} key={logo.id}>
            <a href={logo.url} target="_blank">
              <IconButton
                aria-label={logo.alt}
                size="large"
                sx={{
                  ...AppStyles.LogoButton,
                  '&:hover': {
                    filter: `drop-shadow(0 0 2em ${logo.color})`,
                  },
                }}
                disableRipple={true}
              >
                <img src={logo.image} alt={logo.alt} width={'100%'} />
              </IconButton>
            </a>
          </Grid>
        ))}
      </Grid>
      <Typography variant="h3" fontWeight={'bold'} paragraph>
        TechMinds
      </Typography>
      <Typography variant="h5" fontWeight={'bold'} gutterBottom>
        Vite + React + MUI5
      </Typography>
      {/* using example environment variable in Vite Projects  */}
      <Typography variant="h6" mt={4} mb={4}>
        {import.meta.env.VITE_ENVIRONMENT}
      </Typography>
      <Button
        variant="contained"
        size="large"
        onClick={() => setCount((count) => count + 1)}
        sx={AppStyles.Button}
      >
        count is {count}
      </Button>
      <Typography variant="body1" mt={4} color={grey[600]}>
        Click on the Vite, React or TechMinds logos to learn more
      </Typography>
    </Grid>
  )
}
